@model ViewModel
<h1>Dojo Activity Center</h1>
<a href="/Dashboard">Home</a>
<a href="/clear">Logout</a>
<h3>Create an Activity</h3>
<div class="text-center">
    
    </div>
        <form action="/createactivity" method="post">
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="OneEvent.EventName" class="form-control">
                <span asp-validation-for="OneEvent.EventName"></span>
            </div>
            <div class="form-group">
                <label>Date:</label>
                <input asp-for="OneEvent.D" class="form-control">
                <span asp-validation-for="OneEvent.D"></span>
            </div>
            <div class="form-group">
                <label>Duration:</label>
                <input asp-for="OneEvent.Duration" class="form-control">
                <span asp-validation-for="OneEvent.Duration"></span>
            </div>
            <div class="form-group">
                <select asp-for="OneEvent.Hr" class="form-control" id="Hr">
                    <option>Min</option>
                    <option>Hr</option>
                    <option>Days</option>
                </select>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea asp-for="OneEvent.Description" class="form-control"rows="3"></textarea>
                <span asp-validation-for="OneEvent.Description"></span>
            </div>
            <input type="submit" class="btn btn-primary">
        </form>
    </div>